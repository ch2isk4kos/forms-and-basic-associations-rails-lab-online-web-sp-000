<h1>Create a Song</h1>
<hr>
<%= form_for @song  do |f| %>
  <h3>Song Title:</h3>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <h3>Choose an Artist:</h3>
  <%= f.collection_select :artist_name, Artist.all, :id, :name %>
  <h3>Or Add A New Artist</h3>
  <%= f.text_field :artist_name %>
  <br />
  <h3>Choose an Genre:</h3>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <h3>Or Add A New Genre</h3>
  <%= f.text_field :genre_name %><br>
  <br>
  <%= f.submit %>
<% end %>
